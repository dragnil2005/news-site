{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "string",
      "unique": true
    },
    "content": {
      "type": "blocks"
    },
    "excerpt": {
      "type": "text"
    },
    "publishDate": {
      "type": "date"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "views": {
      "type": "integer",
      "default": 0
    },
    "isFeatured": {
      "type": "boolean"
    },
    "readingTime": {
      "type": "integer"
    },
    "tags": {
      "type": "json"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "articles"
    }
  }
}
